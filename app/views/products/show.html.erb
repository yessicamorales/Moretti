<h1>Detalle de Producto</h1>

<div class="panel panel-default">
  <div class="panel-body">

  	<div class="col-xs-6 col-md-6 col-sm-6">
		<% if  notice %>
		<p class="alert alert-success">
			<%= notice %>
		</p>
		<% end %>
		<div class="row">
			<div class="col-xs-4 col-md-4 col-sm-4">
				<%= image_tag(@product.picture_url, :class=>"img-thumbnail") if @product.picture.present? %>
			</div>
			<div class="col-xs-8 col-md-8 col-sm-8">
				<p>
				  <strong>Nombre del producto:</strong>
				  <%= @product.name %>
				</p>

				<p>
				  <strong>Descripción del producto:</strong>
				  <%= @product.description %>
				</p>

				<p>
				  <strong>Precio del producto:</strong>
				  $ <%= @product.price %>
				</p>

				<p>
				  <strong>Cantidad del producto:</strong>
				  <%= @product.quantity %>
				</p>

				<p>
				  <strong>Producto manufacturado:</strong>
				  <%if @product.manufactured %>
				  	Si
				  <% else %>
				  	No
				  <% end %>
				</p>

				<p>
				  <strong>Categoría:</strong>
				  <%= @product.category.name %>
				</p>

			</div>
		</div>
		<p>
			<%= link_to 'Regresar', products_path, {:class=>"btn btn-danger"}%>
			<%= link_to 'Editar', edit_product_path(@product), {:class=>"btn btn-success"}%>
		</p>
  	</div>
  </div>
</div>
