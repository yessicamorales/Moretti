<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        Por favor corrige los siguientes errores para continuar:
        <ul class="text-danger">
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <%= f.label :nombre %><br>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><span class="fa fa-chevron-right"></span></span>
      <%= f.text_field :name, {:class=>"form-control", :placeholder=>"Nombre de la categoría"}%>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :descripción %><br>
    <div class="input-group">
      <span class="input-group-addon"><span class="fa fa-chevron-right"></span></span>
      <%= f.text_area :description, {:class=>"form-control", :placeholder=>"Descripción"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox">
        <label>
          <%= f.check_box :active%>
          Disponible al público
        </label>
    </div>
  </div>

  <p>
    <%= link_to "Regresar", categories_path, {:class=>"btn btn-danger"}%>
    <button class="btn btn-success">
      <% if @editing %>
        Guardar cambios
      <% else %>
        Crear
      <% end %>
    </button>
  </p>

<% end %>